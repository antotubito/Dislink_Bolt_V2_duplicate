{
  "name": "dislink-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Dislink - Professional networking platform with web and mobile apps",
  "workspaces": [
    "web",
    "mobile",
    "shared"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:clean": "pnpm dev:reset && pnpm dev",
    "dev:reset": "./dev-reset.sh",
    "build": "pnpm --filter web build",
    "build:web": "pnpm --filter web build",
    "build:mobile": "pnpm --filter mobile build",
    "build:all": "pnpm --filter web build && pnpm --filter mobile build",
    "test": "pnpm --filter web test && pnpm --filter mobile test",
    "test:web": "pnpm --filter web test",
    "test:mobile": "pnpm --filter mobile test",
    "lint": "pnpm --filter web lint && pnpm --filter mobile lint",
    "lint:web": "pnpm --filter web lint",
    "lint:mobile": "pnpm --filter mobile lint",
    "clean": "pnpm --filter web clean && pnpm --filter mobile clean",
    "clean:all": "rm -rf node_modules web/node_modules mobile/node_modules shared/node_modules",
    "install:all": "pnpm install",
    "deploy:web": "pnpm --filter web deploy",
    "mobile:android": "pnpm --filter mobile android",
    "mobile:ios": "pnpm --filter mobile ios",
    "verify": "node scripts/continuous-verification.js",
    "verify:watch": "node scripts/watch-verification.js",
    "verify:dashboard": "node scripts/verification-dashboard.js",
    "verify:setup": "./scripts/setup-verification.sh",
    "mobile:start": "pnpm --filter mobile start"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "chalk": "^5.6.2",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@10.16.0+sha512.8066e7b034217b700a9a4dbb3a005061d641ba130a89915213a10b3ca4919c19c037bec8066afdc559b89635fdb806b16ea673f2468fbb28aabfa13c53e3f769",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}