{
  "name": "project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "build:mobile": "pnpm build && pnpm run cap:sync",
    "build:android": "pnpm run build:mobile && npx cap build android",
    "build:ios": "pnpm run build:mobile && npx cap build ios",
    "dev:android": "pnpm run build:mobile && npx cap run android",
    "dev:ios": "pnpm run build:mobile && npx cap run ios",
    "cap:doctor": "npx cap doctor",
    "setup:supabase": "node scripts/setup-supabase.js",
    "deploy:check": "pnpm lint && pnpm build && node scripts/validate-deployment.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:html": "vitest run --coverage --reporter=html",
    "test:coverage:ci": "vitest run --coverage --reporter=json --reporter=text",
    "test:watch": "vitest --watch",
    "test:critical": "vitest run src/lib/__tests__/auth.test.ts src/lib/__tests__/contacts.test.ts",
    "test:components": "vitest run src/components/**/__tests__/**/*.test.{ts,tsx}",
    "test:lib": "vitest run src/lib/__tests__/**/*.test.ts",
    "build:analyze": "pnpm build && npx vite-bundle-analyzer dist/assets/*.js",
    "security:audit": "pnpm audit && npx audit-ci --config audit-ci.json",
    "performance:test": "pnpm build && npx lighthouse http://localhost:3001 --output html --output-path ./lighthouse-report.html",
    "test:qr": "echo 'Starting QR system tests...' && pnpm build && pnpm preview",
    "test:mobile": "pnpm run cap:doctor && pnpm run build:mobile",
    "clean:mobile": "rm -rf android ios",
    "reset:mobile": "pnpm run clean:mobile && pnpm run cap:add:android && pnpm run cap:add:ios"
  },
  "dependencies": {
    "@capacitor-community/barcode-scanner": "^4.0.1",
    "@capacitor/app": "^5.0.7",
    "@capacitor/camera": "^5.0.9",
    "@capacitor/clipboard": "^5.0.7",
    "@capacitor/core": "^5.7.0",
    "@capacitor/device": "^5.0.7",
    "@capacitor/geolocation": "^5.0.7",
    "@capacitor/haptics": "^5.0.7",
    "@capacitor/network": "^5.0.7",
    "@capacitor/push-notifications": "^5.1.0",
    "@capacitor/share": "^5.0.7",
    "@capacitor/status-bar": "^5.0.7",
    "@capacitor/toast": "^5.0.7",
    "@sentry/react": "^10.14.0",
    "@supabase/supabase-js": "^2.39.3",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.0.3",
    "fuse.js": "^7.0.0",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.316.0",
    "qr-scanner": "^1.4.2",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "react-select": "^5.8.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.8",
    "@tailwindcss/forms": "^0.5.7",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/js-cookie": "^3.0.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.2.4",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.0.0",
    "lighthouse": "^12.8.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.16.0+sha512.8066e7b034217b700a9a4dbb3a005061d641ba130a89915213a10b3ca4919c19c037bec8066afdc559b89635fdb806b16ea673f2468fbb28aabfa13c53e3f769"
}