    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Scan QR Code",
      "short_name": "Scan QR",
      "description": "Quickly scan a QR code to connect",
      "url": "/app/qr-scanner",
      "icons": [{ "src": "/icons/qr-icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "My Contacts",
      "short_name": "Contacts",
      "description": "View your professional contacts",
      "url": "/app/contacts",
      "icons": [{ "src": "/icons/contacts-icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Share Profile",
      "short_name": "Share",
      "description": "Share your professional profile",
      "url": "/app/share",
      "icons": [{ "src": "/icons/share-icon-96x96.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dislink desktop dashboard"
    },
    {
      "src": "/screenshots/mobile-contacts.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile contact management"
    },
    {
      "src": "/screenshots/mobile-qr.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "QR code networking"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.dislink.app",
      "id": "com.dislink.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/dislink/id123456789"
    }
  ],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/app/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "dislink",
      "url": "/app/connect?code=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"]
}
